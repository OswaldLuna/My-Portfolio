---

interface Props {
  name: string;
  provider: string;
  url: string;
}

const { name, provider, url } = Astro.props;
---

<article class="flex w-full max-w-[536px] h-[140px] border-2 border-gray-800 rounded-lg overflow-hidden shadow-md bg-gray-900 text-white
  lg:h-[170px]"
>
  <div class="w-1/3 bg-gray-800 flex items-center justify-center py-2 px-3">
    <slot name="icon"/>
  </div>
  <div class="w-2/3 p-4 flex flex-col justify-between">
    <div>
      <h2 class="text-lg font-bold lg:text-xl">{name}</h2>
      <div class="flex items-center gap-x-2">
        <h3 class="text-gray-400 text-base lg:text-lg">{provider}</h3>
        <slot name="provider"/>
      </div>
    </div>
    <a href={url} target="_blank" class="mt-3 inline-block text-blue-500 hover:text-blue-400 text-base font-medium lg:text-lg">
      See Certificate â†’
    </a>
  </div>
</>